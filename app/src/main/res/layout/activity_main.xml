<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.p3text.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/first_page_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/book"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="趣味知识测试"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/girl" />

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start!"
                android:layout_below="@id/title"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="50dp"
                android:background="#4DB6AC"
                android:onClick="start" />
            <Button
                android:id="@+id/button_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:text="2"
                android:visibility="invisible"
                android:onClick="buttonOne"/>

            <Button
                android:id="@+id/button_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/button_one"
                android:text="3"
                android:visibility="invisible"
                android:onClick="buttonTwo"/>

            <Button
                android:id="@+id/button_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/button_two"
                android:text="4"
                android:visibility="invisible"
                android:onClick="buttonThree"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#D50000"
                android:fontFamily="@font/girl"
                android:textSize="80sp"
                android:layout_below="@id/title"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="150dp"
                android:visibility="invisible"/>
        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
